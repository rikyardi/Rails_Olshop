<div class="container-fluid">
	<div class="row mt-5">
		<div class="col-3"></div>
		<div class="col-6 p-5">
			<h3>Create Your Own Shop</h3>
			<hr class="w-25">
			<%= form_tag("/toko/create") do %>
			  <div class="mb-3">
			    <label for="exampleInputEmail1" class="form-label">Nama Toko</label>
			    <input type="text" class="form-control" id="name" aria-describedby="emailHelp" name="nama">
			  </div>
			  <div class="mb-3">
			    <label for="exampleInputEmail1" class="form-label">Deskripsi Toko</label>
			    <textarea class="form-control" id="text" name="deskripsi"></textarea>
			  </div>
			  <input type="submit" class="btn btn-primary w-100" value="Create">
			 <% end %>
		</div>
		<div class="col-3"></div>
	</div>
</div>